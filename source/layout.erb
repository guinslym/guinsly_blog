    <body class="gray-bg">
        <!-- Static navbar -->
        <nav class="navbar navbar-default navbar-fixed-top sticky-navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-controls="navbar">
