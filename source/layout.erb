                                        <%= link_to l.title, l.link, :target => "_blank" %>
                                            <span><%= l.date %> </span>
                                        </div>
                                    </li>
                                    <hr/>
                            <% end %>
                                </ul>
                            </div><!--sidebar widget-->


                          <!-- Side bar widgets -->



                        </div><!--sidebar column-->
